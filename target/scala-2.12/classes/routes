# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET         /                            controllers.HomeController.index()
GET         /index                       controllers.HomeController.index()
GET         /explore                     controllers.HomeController.explore()
GET         /tutorial                    controllers.HomeController.tutorial()
GET         /add-numbers-form            controllers.HomeController.addNumbersForm()
GET         /add-numbers                 controllers.HomeController.addNumbers()
GET         /sandbox                     controllers.HomeController.sandbox()
GET         /play-primoForm              controllers.HomeController.playPrimoForm()
GET         /play-primo                  controllers.HomeController.playPrimo()
GET         /play-primo-calculate        controllers.HomeController.calculateOperations()
GET         /calculator-delete           controllers.HomeController.calculatorDelete()
GET         /student                     controllers.HomeController.studentView()
POST        /add-student                 controllers.HomeController.addStudents()
POST        /add-user                    controllers.HomeController.addUser()
GET         /login-view                  controllers.HomeController.loginView()
GET         /user-view                   controllers.HomeController.createUserView()
GET         /login-check                 controllers.HomeController.getUser()
GET         /dashboard                   controllers.HomeController.dashboardView()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                controllers.Assets.versioned(path="/public", file: Asset)
